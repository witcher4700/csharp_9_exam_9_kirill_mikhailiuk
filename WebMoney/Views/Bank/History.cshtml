@{ ViewData["Title"] = "Home Page"; }
@model WebMoney.ViewModels.HistoryViewModel

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>text-align</title>
</head>
<body>
    <form method="get">

        <div class="form-inline form-group">
            <label class="control-label">Дата создания от: </label>
            @Html.TextBox("dateFrom", Model.DateFrom, htmlAttributes: new { @class = "form-control" })
            <label class="control-label">Дата создания до: </label>
            @Html.TextBox("dateTo", Model.DateTo, htmlAttributes: new { @class = "form-control", value = DateTime.Now })

            <input type="submit" value="Фильтр" class="btn btn-default" />

        </div>

    </form>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">С какого кошелька</th>
                <th scope="col">На какой кошелек</th>
                <th scope="col">Сумма</th>
                <th scope="col">Тип транзакции</th>
                <th scope="col">Время</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model.Transactions)
            {
                <tr>
                    <th scope="row">@t.Id</th>
                    <td>@t.WalletFrom</td>
                    <td>@t.WalletTo</td>
                    <td>@t.MoneyCount</td>
                    <td>@t.TransActionType</td>
                    <td>@t.DateTime</td>
                </tr>
            }


        </tbody>
    </table>
</body>
</html>
